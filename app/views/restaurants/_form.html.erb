<%= form_for(@restaurant, :html => {:multipart => true}) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
    <!--       bootstrap for closing the alert below -->
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    
      <h4><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h4>

    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: "John's Pizza" %>
  </div>
  <div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: 'form-control', placeholder: "555 Fifth Avenue, New York, NY 10118"  %>
  </div>
  <div class="field form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: 'form-control', placeholder: '(555) 555-5555' %>
  </div>
  <div class="field form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: 'form-control', placeholder: 'http://www.johnspizza.com' %>
  </div>
  <div class="field form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="actions form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

